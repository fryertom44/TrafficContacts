<Alloy>
    <Window id="clientWindow"  title="Detail" class='container'>
		<TableView class="form">
			<TableViewSection>
	            <TableViewRow>
	            	<Label class="formLabel">Name:</Label>
	            	<TextField hintText="Name" id="companyName"/>
	        	</TableViewRow>
	            <TableViewRow>
	            	<Label class="formLabel">Website:</Label>
					<TextField hintText="Website" id="website">
				</TableViewRow>
		        <TableViewRow>
	            	<Label class="formLabel">Industry:</Label>
		        	<TextField hintText="Industry Type" id="industryType">
	        	</TableViewRow>
	        </TableViewSection>
	        <TableViewSection headerTitle="More Information">
	            <TableViewRow hasChild="true">
					<Button id="employeesButton">Locations and Employees</Button>
	        	</TableViewRow>
	            <TableViewRow hasChild="true">
					<Button id="jobsButton">Jobs</Button>
				</TableViewRow>
		        <TableViewRow hasChild="true">
					<Button id="quotesButton">Quotes</Button>
	        	</TableViewRow>
	        </TableViewSection>
		</TableView>
    </Window>
</Alloy>